@model MvcClient.Models.MemberDetail
@{
    ViewBag.Title = "Add";
}

<h2>Member Details</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.Id)
    <div class="form-group">
        <label for="txtUserName">User Name</label>
        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @id = "txtUserName" })
    </div>
    <div class="form-group">
        <label for="txtEmail">Email Address</label>
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @id = "txtEmail" })
    </div>
    <div class="form-group">
        <label for="txtPhoneNumber">Phone Number</label>
        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", @id = "txtPhoneNumber", @maxlength=11 })
    </div>
    <div class="form-group">
        <label for="txtAddress">Address</label>
        @Html.TextBoxFor(m => m.Address, new { @class = "form-control", @id = "txtAddress" })
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
}